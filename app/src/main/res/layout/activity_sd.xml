<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SdActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <EditText
            android:id="@+id/nombre_sd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nombre del archivo"
            android:inputType="text"
            android:layout_marginVertical="20dp"
            />

        <EditText
            android:id="@+id/contenido"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginVertical="70dp"
            android:background="#1e1bcc"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="45dp"
                android:layout_marginVertical="520dp"
                android:onClick="guardar"
                android:text="guardar" />

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginVertical="520dp"
                android:onClick="consultar"
                android:text="consultar" />


        </LinearLayout>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginVertical="575dp"
            android:onClick="regresar"
            android:text="r"
            android:textColor="#6ef21a1a"
            android:background="#03efeeee"
            android:textSize="30dp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>